{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx"
  ],
  "exclude": ["node_modules"],
  "references": [
    { "path": "packages/core" },
    { "path": "packages/ai" },
    { "path": "packages/ui" }
  ]
}
